  "devDependencies": {
    "html-minifier": "^3.5.21",
    "inline-source-cli": "^1.2.0",
    "sass": "^1.15.1"
  },
  "scripts": {
    "build": "yarn run sass && yarn run inline && yarn run htmlmin",
    "htmlmin": "html-minifier -c htmlmin.json dist/index.html -o dist/index.html",
    "inline": "inline-source --compress src/index.html dist/index.html",
    "sass": "sass src/style/style.scss src/style/style.css --style compressed"
  },
  "dependencies": {
    "normalize.css": "^8.0.1"
  }
}
